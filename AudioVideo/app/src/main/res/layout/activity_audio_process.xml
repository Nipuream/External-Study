<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".audio.AudioProcessActivity">


    <Button
        android:id="@+id/startRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startRecord"
        android:text="startRecord"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/stopRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="stopRecord"
        android:text="stopRecord"
        app:layout_constraintTop_toBottomOf="@+id/startRecord"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/encodeAAC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="encodeAAC"
        android:onClick="encodeAAC"
        app:layout_constraintTop_toBottomOf="@+id/stopRecord"
        />

    <Button
        android:id="@+id/playPcm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="playPcm"
        android:onClick="playPcm"
        app:layout_constraintTop_toBottomOf="@+id/encodeAAC"
        />


</androidx.constraintlayout.widget.ConstraintLayout>